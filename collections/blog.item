
{.section item}

  <!--WRAPPER-->
  
  <article id="post-{id}" class="{@|item-classes}">
    
    <!--POST TILE-->
    <h1 class="title">
      {.passthrough?}
        <a href="{sourceUrl}" target="_blank">{title}</a>
      {.or}
        <a href="{fullUrl}">{title}</a>
      {.end}
    </h1>
    
    <!--POST META-->
    <p class="meta">
      <time datetime="{addedOn|date %F}">{addedOn|date %B %d, %Y}</time>
      <!--by <a href="?author={author.id}">{author.displayName}</a>-->
      {.section sourceUrl}
        <a href="{@}" class="source" target="_blank">Source</a>.
      {.end}
    </p> 

    <!--MAIN CONTENT-->
    {body}

    <!--BLOG INJECTION-->
    {postItemInjectCode}    

    <!--CATEGORIES-->
    <div class="categories">
    {.repeated section categories}
      <a class="category" href="?category={@|url-encode}">{@}</a>{.alternates with}/
    {.end}
    </div>

    <!--TAGS-->
    <div class="tags">
    {.repeated section tags}
      <a class="tag" href="?tag={@|url-encode}">{@}</a>{.alternates with}/
    {.end}
    </div>

    <!--SHARE AND LIKE-->
	<!--
    {@|like-button}
    {@|social-button}
    -->

    <!--LOCATION-->
    {.section location}
      {.section addressTitle}
        {addressTitle}
        {addressLine1}
        {addressLine2}
        {addressCountry}
      {.end}
    {.end}

    <!--COMMENTS-->
    {@|comments}

  </article>

{.end}
    

<!--PAGINATION-->
{.section pagination}
  <nav class="pagination">

    <!--NEWER PAGE-->
    {.section prevItem}
      <a href="{fullUrl}">Newer</a>
    {.or}
      <a class="disabled">Newer</a>
    {.end}
    
    /
    
    <!--OLDER PAGE-->
    {.section nextItem}
      <a href="{fullUrl}">Older</a>
    {.or}
      <a class="disabled">Older</a>
    {.end}

  </nav>
{.end}
