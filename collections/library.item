<h1>Library</h1>

{.section item}

  <!--WRAPPER-->
  
  <article id="post-{id}" class="{@|item-classes}">
  
    <div class="libIcon">
  	</div>
    
	<div class="postContentWrapper">
    
    <!--POST TILE-->
    <h1 class="title">
        {title}
    </h1>
    
    <!--POST META-->
    <p class="meta">
      Published <time datetime="{addedOn|date %F}">{addedOn|date %B %d, %Y}</time>
      <!-- | <a href="?author={author.id}">{author.displayName}</a> | -->
      {.section sourceUrl}
         | <a href="{@}" class="source" target="_blank">Source</a>
      {.end}
    </p> 

    <!--MAIN CONTENT-->
    {body}

    <!--BLOG INJECTION-->
    {postItemInjectCode}    

    <!--CATEGORIES-->
    <!--
    <div class="categories">
    {.repeated section categories}
      <a class="category" href="?category={@|url-encode}">{@}</a>{.alternates with}/
    {.end}
    </div>
    -->

    <!--TAGS-->
    <div class="tags">
    Topics: 
    {.repeated section tags}
      <a class="tag" href="?tag={@|url-encode}">{@}</a>{.alternates with}/
    {.end}
    </div>

    <!--SHARE AND LIKE-->
    <!--
    {@|like-button}
    {@|social-button} 
    -->    

    <!--LINK TO COMMENTS-->
    <!--
    {@|comment-link}
    -->

    <!--LOCATION-->
    <!--
    {.section location}
      {.section addressTitle}
        {addressTitle}
        {addressLine1}
        {addressLine2}
        {addressCountry}
      {.end}
    {.end}
    -->
    
    </div>

    <!--COMMENTS-->
    {@|comments}

  </article>

{.end}
    

<!--PAGINATION-->
{.section pagination}
  <nav class="pagination">

    <!--NEWER PAGE-->
    {.section prevItem}
      <a href="{fullUrl}">Newer</a>
    {.or}
      <a class="disabled">Newer</a>
    {.end}
    
    /
    
    <!--OLDER PAGE-->
    {.section nextItem}
      <a href="{fullUrl}">Older</a>
    {.or}
      <a class="disabled">Older</a>
    {.end}

  </nav>
{.end}
